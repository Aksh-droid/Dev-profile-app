<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dev Profile | <%= profileData[0]?.name || "Guest" %></title>
    
    <!-- Bootstrap & External CSS -->
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css'>
    <link rel="stylesheet" href="styles/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>
    <header class="bg-primary text-white text-center p-3">
        <h1>Welcome to <%= profileData[0]?.name || "My Developer Profile" %></h1>
    </header>

    <main class="container mt-4">
        <h2>My Profile</h2>

        <!-- New Post Form -->
        <form method="POST" action="insert/" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    <input name="title" class="form-control" placeholder="Post Title" required>
                </div>
                <div class="col-md-6">
                    <input name="post" class="form-control" placeholder="Post Content" required>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-success w-100" role="submit"><i class="bi bi-plus-circle"></i> Add Post</button>
                </div>
            </div>
        </form>

        <!-- Display Existing Posts -->
        <div class="row">
            <% profileData.forEach(post => { %>
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= post.title %></h5>
                            <p class="card-text"><%= post.post %></p>
                            
                            <!-- Update Form -->
                            <form method="POST" action="update/" class="mb-2">
                                <div class="input-group">
                                    <input name="updateTitle" value="<%= post.title %>" class="form-control">
                                    <input name="updatePost" value="<%= post.post %>" class="form-control">
                                    <input type="hidden" name="updateId" value="<%= post._id %>">
                                    <button class="btn btn-warning" role="submit"><i class="bi bi-pencil"></i></button>
                                </div>
                            </form>

                            <!-- Delete Button -->
                            <form method="POST" action="delete/">
                                <input type="hidden" name="deleteId" value="<%= post._id %>">
                                <button class="btn btn-danger w-100" role="submit"><i class="bi bi-trash"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-white text-center py-3 fixed-bottom">
        <p class="mb-0">Â© 2024 | <a href="https://yourportfolio.com" class="text-warning">Your Portfolio</a></p>
    </footer>

    <!-- JS Scripts -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js'></script>
    <script src="scripts/script.js"></script>
</body>
</html>
